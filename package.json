{
  "name": "docpocalypse",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "yarn cli lint .",
    "format": "yarn cli format .",
    "build": "lerna run build"
  },
  "prettier": "@4c/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "yarn cli lint --fix",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "test-site",
      "packages/*"
    ]
  },
  "resolutions": {
    "typescript": "3.7.0-beta",
    "react-docgen": "npm:@monastic.panic/react-docgen"
  },
  "devDependencies": {
    "@4c/cli": "^0.8.2",
    "@4c/import-sort": "^4.3.5",
    "@4c/prettier-config": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "eslint": "^5.16.0",
    "eslint-config-4catalyzer-react": "^0.9.4",
    "eslint-config-4catalyzer-typescript": "^0.12.4",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  }
}
