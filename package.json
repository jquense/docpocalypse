{
  "name": "docpocalypse",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "yarn cli lint .",
    "format": "yarn cli format .",
    "build": "lerna run build"
  },
  "prettier": "@4c/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "yarn cli lint --fix",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "test-site",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@4c/cli": "^0.7.14",
    "@4c/import-sort": "^4.3.4",
    "@4c/prettier-config": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-4catalyzer-react": "^0.9.3",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1"
  }
}
